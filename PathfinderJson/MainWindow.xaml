<flat:FlatWindow x:Class="PathfinderJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathfinderJson"
        xmlns:flat="clr-namespace:UiCore;assembly=UiCore"
        xmlns:edit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d" x:Name="window"
        Title="Pathfinder JSON" Height="730" Width="550" MinWidth="550" MinHeight="450"
        Loaded="window_Loaded" Closing="window_Closing" Closed="window_Closed" Activated="window_Activated" Deactivated="window_Deactivated" >
    <flat:FlatWindow.TopRightElement>
        <Border x:Name="brdrCalculating" Margin="0,4" Visibility="Collapsed" BorderThickness="1" >
            <TextBlock Text="Calculating..." Padding="4,0" VerticalAlignment="Center" />
        </Border>
    </flat:FlatWindow.TopRightElement>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" x:Name="colTabs"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition x:Name="rowToolbar" Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <flat:Menu Grid.Row="0" x:Name="menu" IsMainMenu="True" Grid.ColumnSpan="2" >
            <MenuItem Header="_File">
                <MenuItem Header="_New Character..." x:Name="mnuNew" Click="mnuNew_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/NewFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="New _Window" x:Name="mnuNewWindow" Click="mnuNewWindow_Click" />
                <MenuItem Header="_Open..." x:Name="mnuOpen" Click="mnuOpen_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Recent Files" x:Name="mnuRecent" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/RecentFile.png" />
                    </MenuItem.Icon>
                    <MenuItem Header="(list of recent files appear here)" IsEnabled="False" x:Name="mnuRecentEmpty" />
                    <Separator />
                    <MenuItem Header="_Clear Recent File List" x:Name="mnuRecentClear" Click="mnuRecentClear_Click" />
                </MenuItem>
                <MenuItem Header="_Close" x:Name="mnuClose" Click="btnClose_Click" />
                <Separator />
                <MenuItem Header="_Save" x:Name="mnuSave" Click="mnuSave_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _as..." x:Name="mnuSaveAs" Click="mnuSaveAs_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/SaveAs.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Reloa_d File" x:Name="mnuRevert" Click="mnuRevert_Click" />
                <Separator/>
                <MenuItem Header="Indent _JSON Data" x:Name="mnuIndent" Click="mnuIndent_Click" />
                <Separator />
                <MenuItem Header="_Exit" x:Name="mnuExit" Click="btnExit_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Exit.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit" x:Name="mnuEdit" Visibility="Collapsed" >
                <MenuItem Header="_Undo" x:Name="mnuUndo" Click="mnuUndo_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Undo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo" x:Name="mnuRedo" Click="mnuRedo_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Redo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Copy" x:Name="mnuCopy" Click="mnuCopy_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Copy.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="C_ut" x:Name="mnuCut" Click="mnuCut_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Cut.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Paste" x:Name="mnuPaste" Click="mnuPaste_Click" />
                <Separator />
                <MenuItem Header="_Select All" x:Name="mnuSelectAll" Click="mnuSelectAll_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/SelectText.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete" x:Name="mnuDelete" Click="mnuDelete_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Cancel.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Word Wrap" x:Name="mnuWordWrap" Click="mnuWordWrap_Click" IsChecked="True" />
                <MenuItem Header="_Find" x:Name="mnuFind" Click="mnuFind_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Find.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Calculate" x:Name="mnuEditSheet" >
                <MenuItem Header="_Update Calculations" x:Name="mnuUpdate" Click="mnuUpdate_Click" />
                <MenuItem Header="Change _Totals with Updates" IsChecked="True" x:Name="mnuUpdateTotals" IsCheckable="True" />
                <MenuItem Header="_Calculate Armor Class with Updates" IsChecked="True" x:Name="mnuUpdateAc" IsCheckable="True" />
                <Separator />
                <MenuItem Header="_Auto Update Modifiers" x:Name="mnuAutoUpdate" IsChecked="True" IsCheckable="True" />
                <Separator Visibility="Collapsed" />
                <MenuItem Header="Update Text Editor from Sheet" x:Name="mnuRefreshEditor" Click="mnuRefreshEditor_Click" Visibility="Collapsed" />
                <MenuItem Header="Update Sheet from Text Editor" x:Name="mnuRefresh" Click="mnuRefresh_Click" Visibility="Collapsed" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Continuous Scroll View" x:Name="mnuScroll" Click="mnuScroll_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/ContinuousScroll.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Tabbed Sheet View" x:Name="mnuTabs" Click="mnuTabs_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/TabView.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Raw JSON View" x:Name="mnuRawJson" Click="mnuRawJson_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/TextFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Show T_oolbar" x:Name="mnuToolbar" Click="mnuToolbar_Click" />
                <MenuItem Header="Color _Scheme..." x:Name="mnuColors" Click="mnuColors_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Colors.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Use _High Contrast..." x:Name="mnuHighContrast" Click="mnuHighContrast_Click" />
                <Separator />
                <MenuItem Header="_Filename in Titlebar" x:Name="mnuFilename" Click="MnuFilename_Click" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Dice Roller" x:Name="mnuDiceRoll" Click="mnuDiceRoll_Click" />
                <Separator />
                <MenuItem Header="_Text Editor Font..." x:Name="mnuEditorFont" Click="mnuEditorFont_Click" />
                <MenuItem Header="_Options..." x:Name="mnuOptions" Click="mnuOptions_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Options.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_View on GitHub" x:Name="mnuGithub" Click="mnuGithub_Click" />
                <MenuItem Header="_Feedback/Issues..." x:Name="mnuFeedback" Click="mnuFeedback_Click" />
                <MenuItem Header="_Keyboard Shortcuts..." x:Name="mnuKeyboard" Click="mnuKeyboard_Click" />
                <Separator />
                <MenuItem Header="_Check for Updates" x:Name="mnuCheckUpdates" Click="mnuCheckUpdates_Click" />
                <MenuItem Header="A_uto Check on Startup" x:Name="mnuAutoCheck" Click="mnuAutoCheck_Click" />
                <Separator />
                <MenuItem Header="_About..." x:Name="mnuAbout" Click="mnuAbout_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Info.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </flat:Menu>

        <Border Grid.Row="1" Grid.ColumnSpan="2" x:Name="toolbar" IsEnabled="False" >
            <StackPanel Orientation="Horizontal" Margin="3,0,0,0" x:Name="stkToolbar" UseLayoutRounding="True" >
                <flat:FlatButton TransparentBack="True" x:Name="btnNew" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuNew_Click" Margin="0,2" Padding="3,2" ToolTip="New Character" >
                    <Image Source="/PathfinderJson;component/Images/NewFile.png" Height="16" Width="16" />
                </flat:FlatButton>
                <flat:FlatButton TransparentBack="True" x:Name="btnOpen" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuOpen_Click" Margin="0,2" Padding="3,2" ToolTip="Open" >
                    <Image Source="/PathfinderJson;component/Images/Open.png" Height="16" Width="16" />
                </flat:FlatButton>
                <flat:FlatButton TransparentBack="True" x:Name="btnSave" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuSave_Click" Margin="0,2" Padding="3,2">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/PathfinderJson;component/Images/Save.png" Height="16" Width="16" />
                        <TextBlock Text="Save" Margin="3,0" />
                    </StackPanel>
                </flat:FlatButton>
                <Border Width="1" BorderBrush="Black" BorderThickness="1" Margin="1,2" />
                <flat:FlatButton TransparentBack="True" x:Name="btnUpdate" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuUpdate_Click" Margin="0,2" Padding="3,2" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/PathfinderJson;component/Images/TextFile.png" Height="16" Width="16" SnapsToDevicePixels="True" />
                        <TextBlock Text="Update Calculations" Margin="3,0" />
                    </StackPanel>
                </flat:FlatButton>
                <StackPanel Orientation="Horizontal" x:Name="stkEditToolbar" >
                    <Border Width="1" BorderBrush="Black" BorderThickness="1" Margin="1,2" />
                    <flat:FlatButton TransparentBack="True" x:Name="btnUndo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuUndo_Click" Margin="0,2" Padding="3,2" ToolTip="Undo" >
                        <Image Source="/PathfinderJson;component/Images/Undo.png" Height="16" Width="16" />
                    </flat:FlatButton>
                    <flat:FlatButton TransparentBack="True" x:Name="btnRedo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuRedo_Click" Margin="0,2" Padding="3,2" ToolTip="Redo" >
                        <Image Source="/PathfinderJson;component/Images/Redo.png" Height="16" Width="16" />
                    </flat:FlatButton>
                    <flat:FlatButton TransparentBack="True" x:Name="btnFind" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuFind_Click" Margin="0,2" Padding="3,2" >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PathfinderJson;component/Images/Find.png" Height="16" Width="16" />
                            <TextBlock Text="Find" Margin="3,0" />
                        </StackPanel>
                    </flat:FlatButton>
                </StackPanel>
            </StackPanel>
        </Border>

        <flat:SelectPanel Grid.Column="0" Grid.Row="2" x:Name="selTabs" MultiSelect="False" PanelBorderThickness="0,0,1,0" />
        <ScrollViewer Grid.Column="1" Grid.Row="2" x:Name="scrSheet" AllowDrop="True" Drop="scrSheet_Drop" >
            <StackPanel x:Name="stkSheet" >
                <Grid Margin="5,5,5,0" x:Name="grdGeneral" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="110"/>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="180"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="150" />
                    </Grid.RowDefinitions>
                    <Grid Margin="10,0,0,0">
                        <TextBlock x:Name="titGeneral" Text="General" FontSize="16" />
                    </Grid>
                    <Expander VerticalAlignment="Center" Margin="10,0,10,0" Grid.Row="1" x:Name="expUser" Header="Player Data" Foreground="{Binding Foreground, ElementName=window}" >
                        <Grid Height="140" >
                            <TextBox x:Name="txtPlayerName" HorizontalAlignment="Left" Height="23" Margin="70,24,0,0" VerticalAlignment="Top" Width="285" IsReadOnly="True" IsReadOnlyCaretVisible="True" />
                            <TextBlock x:Name="lblPlayerName" HorizontalAlignment="Left" Margin="70,8,0,0" Text="Player Name" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPlayerEmail" HorizontalAlignment="Left" Height="23" Margin="70,68,0,0" VerticalAlignment="Top" Width="285" IsReadOnly="True" IsReadOnlyCaretVisible="True" />
                            <TextBlock x:Name="lblPlayerEmail" HorizontalAlignment="Left" Margin="70,52,0,0" Text="Player Email" VerticalAlignment="Top"/>
                            <Image x:Name="imgPlayer" HorizontalAlignment="Left" Height="48" Margin="10,20,0,0" VerticalAlignment="Top" Width="48" Stretch="UniformToFill"/>

                            <flat:FlatButton x:Name="btnEditPlayerData" ColorScheme="{Binding ColorScheme, ElementName=window}" Content="Edit Data..." HorizontalAlignment="Left" Margin="70,0,0,10" VerticalAlignment="Bottom" Width="100" Click="btnEditPlayerData_Click" />
                        </Grid>
                    </Expander>

                    <TextBox x:Name="txtCharacter" HorizontalAlignment="Left" Height="23" Margin="15,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="180" TextChanged="txtCharacter_TextChanged" />
                    <TextBlock x:Name="lblCharacter" HorizontalAlignment="Left" Margin="15,12,0,0" Grid.Row="2" Text="Character name" VerticalAlignment="Top" />
                    <TextBox x:Name="txtLevel" HorizontalAlignment="Left" Height="23" Margin="215,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="180" TextChanged="textbox_TextChanged" />
                    <TextBlock x:Name="lblLevl" HorizontalAlignment="Left" Margin="215,12,0,0" Grid.Row="2" Text="Class/Level" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtAlignment" HorizontalAlignment="Left" Height="23" Margin="15,80,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" TextChanged="textbox_TextChanged"/>
                    <TextBlock x:Name="lblAlignment" HorizontalAlignment="Left" Margin="15,62,0,0" Grid.Row="2" Text="Alignment" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtHomeland" HorizontalAlignment="Left" Height="23" Margin="145,80,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" TextChanged="textbox_TextChanged"/>
                    <TextBlock x:Name="lblHomeland" HorizontalAlignment="Left" Margin="144,62,0,0" Grid.Row="2" Text="Homeland" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtDeity" HorizontalAlignment="Left" Height="23" Margin="275,80,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" TextChanged="textbox_TextChanged"/>
                    <TextBlock x:Name="lblDeity" HorizontalAlignment="Left" Margin="275,62,0,0" Grid.Row="2" Text="Deity" VerticalAlignment="Top"/>

                    <Expander VerticalAlignment="Center" Margin="10,0,10,10" Grid.Row="3" x:Name="expPhysical" Header="Physical Attributes / Speed" Foreground="{Binding Foreground, ElementName=window}" >
                        <Grid Height="240" >
                            <TextBox x:Name="txtPhyRace" HorizontalAlignment="Left" Height="23" Margin="10,24,0,0" VerticalAlignment="Top" Width="115" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhyRace" HorizontalAlignment="Left" Margin="10,8,0,0" Text="Race" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhySize" HorizontalAlignment="Left" Height="23" Margin="135,24,0,0" VerticalAlignment="Top" Width="70" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhySize" HorizontalAlignment="Left" Margin="135,8,0,0" Text="Size" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhyGender" HorizontalAlignment="Left" Height="23" Margin="215,24,0,0" VerticalAlignment="Top" Width="70" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhyGender" HorizontalAlignment="Left" Margin="215,8,0,0" Text="Gender" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhyAge" Height="23" Margin="295,24,0,0" VerticalAlignment="Top" TextChanged="textbox_TextChanged" HorizontalAlignment="Left" Width="70"/>
                            <TextBlock x:Name="lblPhyAge" HorizontalAlignment="Left" Margin="295,8,0,0" Text="Age" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhyHeight" HorizontalAlignment="Left" Height="23" Margin="10,74,0,0" VerticalAlignment="Top" Width="80" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhyHeight" HorizontalAlignment="Left" Margin="10,58,0,0" Text="Height" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhyWeight" HorizontalAlignment="Left" Height="23" Margin="103,74,0,0" VerticalAlignment="Top" Width="80" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhyWeight" HorizontalAlignment="Left" Margin="103,58,0,0" Text="Weight" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhyHair" HorizontalAlignment="Left" Height="23" Margin="194,74,0,0" VerticalAlignment="Top" Width="80" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhyHair" HorizontalAlignment="Left" Margin="194,58,0,0" Text="Hair" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPhyEyes" HorizontalAlignment="Left" Height="23" Margin="285,74,0,0" VerticalAlignment="Top" Width="80" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblPhyEyes" HorizontalAlignment="Left" Margin="285,58,0,0" Text="Eyes" VerticalAlignment="Top"/>

                            <TextBlock x:Name="lblSpeed" HorizontalAlignment="Left" Margin="10,115,0,0" Text="Speed" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedBase" HorizontalAlignment="Left" Height="23" Margin="10,151,0,0" VerticalAlignment="Top" Width="55" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblSpeedBase" HorizontalAlignment="Left" Margin="10,135,0,0" Text="Base" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedArmor" HorizontalAlignment="Left" Height="23" Margin="70,151,0,0" VerticalAlignment="Top" Width="55" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblSpeedArmor" HorizontalAlignment="Left" Margin="70,135,0,0" Text="w/ Armor" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedFly" HorizontalAlignment="Left" Height="23" Margin="130,151,0,0" VerticalAlignment="Top" Width="55" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblSpeedFly" HorizontalAlignment="Left" Margin="130,135,0,0" Text="Fly" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedSwim" HorizontalAlignment="Left" Height="23" Margin="190,151,0,0" VerticalAlignment="Top" Width="55" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblSpeedSwim" HorizontalAlignment="Left" Margin="190,135,0,0" Text="Swim" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedClimb" HorizontalAlignment="Left" Height="23" Margin="250,151,0,0" VerticalAlignment="Top" Width="55" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblSpeedClimb" HorizontalAlignment="Left" Margin="250,135,0,0" Text="Climb" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedBurrow" Height="23" Margin="310,151,0,0" VerticalAlignment="Top" TextChanged="textbox_TextChanged" HorizontalAlignment="Left" Width="55"/>
                            <TextBlock x:Name="lblSpeedBurow" HorizontalAlignment="Left" Margin="310,135,0,0" Text="Burrow" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtSpeedTemp" Height="23" Margin="10,200,16,0" VerticalAlignment="Top" TextChanged="textbox_TextChanged"/>
                            <TextBlock x:Name="lblSpeedTemp" HorizontalAlignment="Left" Margin="10,184,0,0" Text="Temporary Speed Modifiers" VerticalAlignment="Top"/>
                        </Grid>
                    </Expander>

                    <flat:IntegerSpinner x:Name="txtStr" HorizontalAlignment="Left" Height="23" Margin="132,5,0,0" Grid.Row="4" VerticalAlignment="Top"   Width="60" ValueChanged="txtStr_ValueChanged" LostFocus="txtStr_LostFocus" MinValue="-99" MaxValue="999" AcceptExpressions="True" ColorScheme="{Binding ColorScheme, ElementName=window}" />
                    <flat:IntegerSpinner x:Name="txtDex" HorizontalAlignment="Left" Height="23" Margin="132,33,0,0" Grid.Row="4" VerticalAlignment="Top"  Width="60" ValueChanged="txtStr_ValueChanged" LostFocus="txtStr_LostFocus" MinValue="-99" MaxValue="999" AcceptExpressions="True" ColorScheme="{Binding ColorScheme, ElementName=window}" />
                    <flat:IntegerSpinner x:Name="txtCon" HorizontalAlignment="Left" Height="23" Margin="132,61,0,0" Grid.Row="4" VerticalAlignment="Top"  Width="60" ValueChanged="txtStr_ValueChanged" LostFocus="txtStr_LostFocus" MinValue="-99" MaxValue="999" AcceptExpressions="True" ColorScheme="{Binding ColorScheme, ElementName=window}" />
                    <flat:IntegerSpinner x:Name="txtInt" HorizontalAlignment="Left" Height="23" Margin="132,89,0,0" Grid.Row="4" VerticalAlignment="Top"  Width="60" ValueChanged="txtStr_ValueChanged" LostFocus="txtStr_LostFocus" MinValue="-99" MaxValue="999" AcceptExpressions="True" ColorScheme="{Binding ColorScheme, ElementName=window}" />
                    <flat:IntegerSpinner x:Name="txtWis" HorizontalAlignment="Left" Height="23" Margin="132,117,0,0" Grid.Row="4" VerticalAlignment="Top" Width="60" ValueChanged="txtStr_ValueChanged" LostFocus="txtStr_LostFocus" MinValue="-99" MaxValue="999" AcceptExpressions="True" ColorScheme="{Binding ColorScheme, ElementName=window}" />
                    <flat:IntegerSpinner x:Name="txtCha" HorizontalAlignment="Left" Height="23" Margin="132,145,0,0" Grid.Row="4" VerticalAlignment="Top" Width="60" ValueChanged="txtStr_ValueChanged" LostFocus="txtStr_LostFocus" MinValue="-99" MaxValue="999" AcceptExpressions="True" ColorScheme="{Binding ColorScheme, ElementName=window}" />
                    <TextBlock x:Name="lblStr" HorizontalAlignment="Left" Margin="15,8,0,0" Grid.Row="4" Text="STR" FontWeight="Bold" VerticalAlignment="Top" />
                    <TextBlock x:Name="lblDex" HorizontalAlignment="Left" Margin="15,38,0,0" Grid.Row="4" Text="DEX" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblCon" HorizontalAlignment="Left" Margin="15,66,0,0" Grid.Row="4" Text="CON" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblInt" HorizontalAlignment="Left" Margin="15,94,0,0" Grid.Row="4" Text="INT" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblWis" HorizontalAlignment="Left" Margin="15,122,0,0" Grid.Row="4" Text="WIS" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblCha" HorizontalAlignment="Left" Margin="15,150,0,0" Grid.Row="4" Text="CHA" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblStr_Copy" HorizontalAlignment="Left" Margin="50,8,0,0" Grid.Row="4" Text="Strength" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblDex_Copy" HorizontalAlignment="Left" Margin="50,38,0,0" Grid.Row="4" Text="Dexterity" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblCon_Copy" HorizontalAlignment="Left" Margin="50,66,0,0" Grid.Row="4" Text="Constitution" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblInt_Copy" HorizontalAlignment="Left" Margin="50,94,0,0" Grid.Row="4" Text="Intelligence" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblWis_Copy" HorizontalAlignment="Left" Margin="50,122,0,0" Grid.Row="4" Text="Wisdom" VerticalAlignment="Top"/>
                    <TextBlock x:Name="lblCha_Copy" HorizontalAlignment="Left" Margin="50,150,0,0" Grid.Row="4" Text="Charisma" VerticalAlignment="Top"/>

                    <TextBox x:Name="txtStrm" HorizontalAlignment="Left" Height="23" Margin="256,5,0,0" VerticalAlignment="Top" Width="40" IsEnabled="False" Grid.Row="4"/>
                    <TextBox x:Name="txtDexm" HorizontalAlignment="Left" Height="23" Margin="256,33,0,0" VerticalAlignment="Top" Width="40" IsEnabled="False" Grid.Row="4"/>
                    <TextBox x:Name="txtConm" HorizontalAlignment="Left" Height="23" Margin="256,61,0,0" VerticalAlignment="Top" Width="40" IsEnabled="False" Grid.Row="4"/>
                    <TextBox x:Name="txtIntm" HorizontalAlignment="Left" Height="23" Margin="256,89,0,0" VerticalAlignment="Top" Width="40" IsEnabled="False" Grid.Row="4"/>
                    <TextBox x:Name="txtWism" HorizontalAlignment="Left" Height="23" Margin="256,117,0,0" VerticalAlignment="Top" Width="40" IsEnabled="False" Grid.Row="4"/>
                    <TextBox x:Name="txtCham" HorizontalAlignment="Left" Height="23" Margin="256,145,0,0" VerticalAlignment="Top" Width="40" IsEnabled="False" Grid.Row="4"/>
                    <TextBlock HorizontalAlignment="Left" Margin="207,8,0,0" Text="modifier" VerticalAlignment="Top" Grid.Row="4"/>
