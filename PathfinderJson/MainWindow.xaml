<flat:FlatWindow x:Class="PathfinderJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathfinderJson"
        xmlns:flat="clr-namespace:SolidShineUi;assembly=SolidShineUi"
        xmlns:edit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:md="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d" x:Name="window"
        Title="Pathfinder JSON" Height="785" Width="550" MinWidth="550" MinHeight="450" ExcludeTopRightElementFromChrome="False"
        Loaded="window_Loaded" Closing="window_Closing" Closed="window_Closed" Activated="window_Activated" Deactivated="window_Deactivated" >
    <flat:FlatWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PathfinderJson;component/SearchPanel/SearchPanel.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </flat:FlatWindow.Resources>
    <flat:FlatWindow.CommandBindings>
        <CommandBinding Command="{x:Static md:Commands.Hyperlink}" Executed="HyperlinkCommand_Executed" />
    </flat:FlatWindow.CommandBindings>
    <flat:FlatWindow.TopRightElement>
        <StackPanel Orientation="Horizontal">
            <Border x:Name="brdrUndoState" Margin="0,4" Visibility="Collapsed" BorderThickness="0">
                <TextBlock Text="-" Padding="4,0" FontSize="12" VerticalAlignment="Center" x:Name="txtUndoState" />
            </Border>
            <Border x:Name="brdrSaved" Margin="0,4" Visibility="Collapsed" BorderThickness="1" BorderBrush="Transparent" Background="#01FFFFFF" WindowChrome.IsHitTestVisibleInChrome="True" MouseDown="brdrSaved_MouseDown" >
                <TextBlock Text="File Saved" Padding="4,0" FontSize="12" VerticalAlignment="Center" />
            </Border>
            <Border x:Name="brdrCalculating" Margin="0,4" Visibility="Collapsed" BorderThickness="1" >
                <TextBlock Text="Calculating..." Padding="4,0" FontSize="12" VerticalAlignment="Center" />
            </Border>
        </StackPanel>
    </flat:FlatWindow.TopRightElement>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" x:Name="colTabs"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition x:Name="rowToolbar" Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <flat:Menu Grid.Row="0" x:Name="menu" IsMainMenu="True" Grid.ColumnSpan="2" >
            <MenuItem Header="_File">
                <MenuItem Header="_New Character..." x:Name="mnuNew" Click="mnuNew_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/NewFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="New _Window" x:Name="mnuNewWindow" Click="mnuNewWindow_Click" />
                <MenuItem Header="_Open..." x:Name="mnuOpen" Click="mnuOpen_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Recent Files" x:Name="mnuRecent" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/RecentFile.png" />
                    </MenuItem.Icon>
                    <MenuItem Header="(list of recent files appear here)" IsEnabled="False" x:Name="mnuRecentEmpty" />
                    <Separator />
                    <MenuItem Header="_Show Actions Menu on Left Click" x:Name="mnuRecentActions" Click="mnuRecentActions_Click" />
                    <Separator />
                    <MenuItem Header="_Clear Recent File List" x:Name="mnuRecentClear" Click="mnuRecentClear_Click" />
                </MenuItem>
                <MenuItem Header="_Close" x:Name="mnuClose" Click="btnClose_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Close.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Save" x:Name="mnuSave" Click="mnuSave_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _as..." x:Name="mnuSaveAs" Click="mnuSaveAs_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/SaveAs.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Reloa_d File" x:Name="mnuRevert" Click="mnuRevert_Click" />
                <Separator/>
                <MenuItem Header="S_heet Settings..." x:Name="mnuSheetSettings" Click="mnuSheetSettings_Click" />
                <Separator/>
                <MenuItem Header="Indent _JSON Data" x:Name="mnuIndent" Click="mnuIndent_Click" />
                <Separator />
                <MenuItem Header="_Exit" x:Name="mnuExit" Click="btnExit_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Exit.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit" x:Name="mnuEditS" Visibility="Collapsed" IsEnabled="False" >
                <MenuItem Header="_Undo" x:Name="mnuUndoS" Click="mnuUndoS_Click" IsEnabled="False" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Undo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo" x:Name="mnuRedoS" Click="mnuRedoS_Click" IsEnabled="False" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Redo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Isolated Undo _Test" x:Name="mnuTestUndo" Click="mnuTestUndo_Click" IsEnabled="False" Visibility="Collapsed" />
                <MenuItem Header="_Show Undo State" x:Name="mnuShowUndo" Click="mnuShowUndo_Click" IsEnabled="False" Visibility="Collapsed" />
                <Separator />
                <MenuItem Header="Insert _JSON..." x:Name="mnuInsertJson" Click="mnuInsertJson_Click" IsEnabled="False" />
            </MenuItem>
            <MenuItem Header="_Edit" x:Name="mnuEdit" Visibility="Collapsed" >
                <MenuItem Header="_Undo Text Edit" x:Name="mnuUndo" Click="mnuUndo_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Undo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo Text Edit" x:Name="mnuRedo" Click="mnuRedo_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Redo.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Copy" x:Name="mnuCopy" Click="mnuCopy_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Copy.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="C_ut" x:Name="mnuCut" Click="mnuCut_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Cut.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Paste" x:Name="mnuPaste" Click="mnuPaste_Click" />
                <Separator />
                <MenuItem Header="_Select All" x:Name="mnuSelectAll" Click="mnuSelectAll_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/SelectText.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete" x:Name="mnuDelete" Click="mnuDelete_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Cancel.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Word Wrap" x:Name="mnuWordWrap" Click="mnuWordWrap_Click" IsChecked="True" />
                <MenuItem Header="_Find" x:Name="mnuFind" Click="mnuFind_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Find.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Calculate" x:Name="mnuEditSheet" >
                <MenuItem Header="_Update Calculations" x:Name="mnuUpdate" Click="mnuUpdate_Click" />
                <MenuItem Header="Change _Totals with Updates" IsChecked="True" x:Name="mnuUpdateTotals" Click="mnuUpdateTotals_Click" />
                <MenuItem Header="_Calculate Armor Class with Updates" IsChecked="True" x:Name="mnuUpdateAc" Click="mnuUpdateAc_Click" />
                <Separator />
                <MenuItem Header="_Auto Update Modifiers" x:Name="mnuAutoUpdate" IsChecked="True" Click="mnuAutoUpdate_Click" />
                <Separator Visibility="Collapsed" />
                <MenuItem Header="Update Text Editor from Sheet" x:Name="mnuRefreshEditor" Click="mnuRefreshEditor_Click" Visibility="Collapsed" />
                <MenuItem Header="Update Sheet from Text Editor" x:Name="mnuRefresh" Click="mnuRefresh_Click" Visibility="Collapsed" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Continuous Scroll View" x:Name="mnuScroll" Click="mnuScroll_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/ContinuousScroll.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Tabbed Sheet View" x:Name="mnuTabs" Click="mnuTabs_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/TabView.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Raw JSON View" x:Name="mnuRawJson" Click="mnuRawJson_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/TextFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Show T_oolbar" x:Name="mnuToolbar" Click="mnuToolbar_Click" />
                <MenuItem Header="Color _Scheme..." x:Name="mnuColors" Click="mnuColors_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Colors.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Filename in Titlebar" x:Name="mnuFilename" Click="mnuFilename_Click" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Dice Roller" x:Name="mnuDiceRoll" Click="mnuDiceRoll_Click" />
                <MenuItem Header="_Counters" x:Name="mnuCounters" Click="mnuCounters_Click" Visibility="Collapsed" IsEnabled="False" />
                <Separator />
                <MenuItem Header="_Text Editor Font..." x:Name="mnuEditorFont" Click="mnuEditorFont_Click" />
                <MenuItem Header="_Options..." x:Name="mnuOptions" Click="mnuOptions_Click">
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Options.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_View on GitHub" x:Name="mnuGithub" Click="mnuGithub_Click" />
                <MenuItem Header="_Feedback/Issues..." x:Name="mnuFeedback" Click="mnuFeedback_Click" />
                <MenuItem Header="_Keyboard Shortcuts..." x:Name="mnuKeyboard" Click="mnuKeyboard_Click" />
                <MenuItem Header="_Markdown Help..." x:Name="mnuMarkdown" Click="mnuMarkdown_Click" />
                <Separator />
                <MenuItem Header="_Check for Updates" x:Name="mnuCheckUpdates" Click="mnuCheckUpdates_Click" />
                <MenuItem Header="A_uto Check on Startup" x:Name="mnuAutoCheck" Click="mnuAutoCheck_Click" />
                <Separator />
                <MenuItem Header="_About..." x:Name="mnuAbout" Click="mnuAbout_Click" >
                    <MenuItem.Icon>
                        <Image Source="/PathfinderJson;component/Images/Color/Info.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </flat:Menu>

        <Border Grid.Row="1" Grid.ColumnSpan="2" x:Name="toolbar" IsEnabled="False" >
            <StackPanel Orientation="Horizontal" Margin="3,0,0,0" x:Name="stkToolbar" UseLayoutRounding="True" >
                <flat:FlatButton TransparentBack="True" x:Name="btnNew" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuNew_Click" Margin="0,2" Padding="3,2" ToolTip="New Character" >
                    <local:ThemedImage ImageName="NewFile" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                </flat:FlatButton>
                <flat:FlatButton TransparentBack="True" x:Name="btnOpen" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuOpen_Click" Margin="0,2" Padding="3,2" ToolTip="Open" >
                    <local:ThemedImage ImageName="Open" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                </flat:FlatButton>
                <flat:FlatButton TransparentBack="True" x:Name="btnSave" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuSave_Click" Margin="0,2" Padding="3,2">
                    <StackPanel Orientation="Horizontal">
                        <local:ThemedImage ImageName="Save" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                        <TextBlock Text="Save" Margin="3,0" />
                    </StackPanel>
                </flat:FlatButton>
                <Border Width="1" BorderBrush="Black" BorderThickness="1" Margin="1,2" />
                <flat:FlatButton TransparentBack="True" x:Name="btnUpdate" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuUpdate_Click" Margin="0,2" Padding="3,2" >
                    <StackPanel Orientation="Horizontal">
                        <local:ThemedImage ImageName="TextFile" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                        <TextBlock Text="Update Calculations" Margin="3,0" />
                    </StackPanel>
                </flat:FlatButton>
                <StackPanel Orientation="Horizontal" x:Name="stkSheetEditToolbar" >
                    <Border Width="1" BorderBrush="Black" BorderThickness="1" Margin="1,2" />
                    <flat:FlatButton TransparentBack="True" x:Name="btnUndoS" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuUndoS_Click" Margin="0,2" Padding="3,2" ToolTip="Undo" >
                        <local:ThemedImage ImageName="Undo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton TransparentBack="True" x:Name="btnRedoS" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuRedoS_Click" Margin="0,2" Padding="3,2" ToolTip="Redo" >
                        <local:ThemedImage ImageName="Redo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                </StackPanel>
                <StackPanel Orientation="Horizontal" x:Name="stkEditToolbar" >
                    <Border Width="1" BorderBrush="Black" BorderThickness="1" Margin="1,2" />
                    <flat:FlatButton TransparentBack="True" x:Name="btnUndo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuUndo_Click" Margin="0,2" Padding="3,2" ToolTip="Undo" >
                        <local:ThemedImage ImageName="Undo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton TransparentBack="True" x:Name="btnRedo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuRedo_Click" Margin="0,2" Padding="3,2" ToolTip="Redo" >
                        <local:ThemedImage ImageName="Redo" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton TransparentBack="True" x:Name="btnFind" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Click="mnuFind_Click" Margin="0,2" Padding="3,2" >
                        <StackPanel Orientation="Horizontal">
                            <local:ThemedImage ImageName="Find" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                            <TextBlock Text="Find" Margin="3,0" />
                        </StackPanel>
                    </flat:FlatButton>
                </StackPanel>
            </StackPanel>
        </Border>

        <flat:SelectPanel Grid.Column="0" Grid.Row="2" x:Name="selTabs" MultiSelect="False" BorderThickness="0,0,1,0" />
        <ScrollViewer Grid.Column="1" Grid.Row="2" x:Name="scrSheet" AllowDrop="True" Drop="scrSheet_Drop" >
            <StackPanel x:Name="stkSheet" >
                <Grid Margin="5,5,5,0" x:Name="grdGeneral" Visibility="Visible" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="60"/>
                        <RowDefinition Height="Auto" MinHeight="50"/>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" MinHeight="32" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="150" />
                    </Grid.RowDefinitions>
                    <Grid Margin="10,0,0,0">
                        <TextBlock x:Name="titGeneral" Text="General" FontSize="16" />
                    </Grid>
                    <Expander VerticalAlignment="Center" Margin="10,0,10,0" Grid.Row="1" x:Name="expUser" Header="Player Data" Foreground="{Binding Foreground, ElementName=window}" >
                        <Grid MinHeight="140" Height="Auto" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="txtPlayerName" HorizontalAlignment="Left" Height="23" Margin="70,0,0,0" VerticalAlignment="Top" Width="285" IsReadOnly="True" IsReadOnlyCaretVisible="True" Grid.Row="1" />
                            <TextBlock x:Name="lblPlayerName" HorizontalAlignment="Left" Margin="70,5,0,2" Text="Player Name" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtPlayerEmail" HorizontalAlignment="Left" Height="23" Margin="70,0,0,0" VerticalAlignment="Center" Width="285" IsReadOnly="True" IsReadOnlyCaretVisible="True" Grid.Row="3" />
                            <TextBlock x:Name="lblPlayerEmail" HorizontalAlignment="Left" Margin="70,5,0,2" Text="Player Email" VerticalAlignment="Top" Grid.Row="2"/>
                            <Image x:Name="imgPlayer" HorizontalAlignment="Left" Height="48" Margin="10,0,0,0" VerticalAlignment="Top" Width="48" Stretch="UniformToFill" Grid.RowSpan="3" Grid.Row="1"/>

                            <flat:FlatButton x:Name="btnEditPlayerData" ColorScheme="{Binding ColorScheme, ElementName=window}" Content="Edit Data..." HorizontalAlignment="Left" Margin="70,15,0,5" VerticalAlignment="Top" Width="100" Click="btnEditPlayerData_Click" Grid.Row="4" />
                        </Grid>
                    </Expander>
                    <Grid Margin="15,15,10,2" Grid.Row="2" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="9*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtCharacter" MinHeight="23" Margin="0,0,10,0" VerticalAlignment="Center" TextChanged="txtCharacter_TextChanged" Grid.Row="1" />
                        <TextBlock x:Name="lblCharacter" HorizontalAlignment="Left" Text="Character name" VerticalAlignment="Center" />
                        <TextBox x:Name="txtLevel" MinHeight="23" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Column="1" Grid.Row="1" />
                        <TextBlock x:Name="lblLevl" HorizontalAlignment="Left" Text="Class/Level" VerticalAlignment="Center" Grid.Column="1"/>
                    </Grid>
                    <Grid Margin="15,2,10,2" Grid.Row="3" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtAlignment" MinHeight="23" Margin="0,0,10,0" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1"/>
                        <TextBlock x:Name="lblAlignment" HorizontalAlignment="Left" Text="Alignment" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtHomeland" MinHeight="23" Margin="0,0,10,0" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Column="1" Grid.Row="1"/>
                        <TextBlock x:Name="lblHomeland" HorizontalAlignment="Left" Text="Homeland" VerticalAlignment="Center" Grid.Column="1"/>
                        <TextBox x:Name="txtDeity" MinHeight="23" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Column="2" Grid.Row="1"/>
                        <TextBlock x:Name="lblDeity" HorizontalAlignment="Left" Text="Deity" VerticalAlignment="Center" Grid.Column="2"/>
                    </Grid>

                    <Expander VerticalAlignment="Top" Margin="10,0,10,0" Grid.Row="4" x:Name="expPhysical" Header="Physical Attributes / Speed" Foreground="{Binding Foreground, ElementName=window}" >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="50" />
                                <RowDefinition Height="Auto" MinHeight="50" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="50" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Margin="10,0,10,0" VerticalAlignment="Center" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12*"/>
                                    <ColumnDefinition Width="8*"/>
                                    <ColumnDefinition Width="8*"/>
                                    <ColumnDefinition Width="8*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="txtPhyRace" HorizontalAlignment="Stretch" MinHeight="23" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1"/>
                                <TextBlock x:Name="lblPhyRace" HorizontalAlignment="Left" Text="Race" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtPhySize" MinHeight="23" Margin="5,0,0,0" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Grid.Column="1"/>
                                <TextBlock x:Name="lblPhySize" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Size" VerticalAlignment="Center" Grid.Column="1"/>
                                <TextBox x:Name="txtPhyGender" MinHeight="23" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                                <TextBlock x:Name="lblPhyGender" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Gender" VerticalAlignment="Center" Grid.Column="2"/>
                                <TextBox x:Name="txtPhyAge" MinHeight="23" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Grid.Column="3" Margin="5,0,0,0"/>
                                <TextBlock x:Name="lblPhyAge" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Age" VerticalAlignment="Center" Grid.Column="3"/>
                            </Grid>

                            <Grid Margin="10,0,10,5" VerticalAlignment="Center" Grid.Row="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="txtPhyHeight" MinHeight="23" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Margin="0"/>
                                <TextBlock x:Name="lblPhyHeight" HorizontalAlignment="Left" Text="Height" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtPhyWeight" MinHeight="23" Margin="5,0,0,0" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Grid.Column="1"/>
                                <TextBlock x:Name="lblPhyWeight" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Weight" VerticalAlignment="Center" Grid.Column="1"/>
                                <TextBox x:Name="txtPhyHair" MinHeight="23" Margin="5,0,0,0" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Grid.Column="2"/>
                                <TextBlock x:Name="lblPhyHair" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Hair" VerticalAlignment="Center" Grid.Column="2"/>
                                <TextBox x:Name="txtPhyEyes" MinHeight="23" Margin="5,0,0,0" VerticalAlignment="Center" TextChanged="textbox_TextChanged" Grid.Row="1" Grid.Column="3"/>
                                <TextBlock x:Name="lblPhyEyes" HorizontalAlignment="Left" Margin="6,0,0,0" Text="Eyes" VerticalAlignment="Center" Grid.Column="3"/>
                            </Grid>

                            <TextBlock x:Name="lblSpeed" HorizontalAlignment="Left" Margin="10,0,0,0" Text="Speed" VerticalAlignment="Center" Grid.Row="2"/>
                            <flat:LinkTextBlock x:Name="lnkMovement" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Text="View Movement on D20PFSRD"
                                                Click="lnkCombat_Click" Tag="https://www.d20pfsrd.com/alignment-description/movement/" Cursor="Hand" Margin="0,0,15,0" />
                            <Grid Margin="10,5" Grid.Row="3" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
